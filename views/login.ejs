<!DOCTYPE html>
<html lang="en">
    <%- include('./pieces/head') %>
    <body>
        <%- include('./pieces/nav', {user: user})%>
        <div class="container">
            <div class="register">
                <h1>
                    Login
                </h1>
                <form action="" method="POST">
                    <div class="form-pair">
                        <label for="username">
                            Username
                        </label>
                
                        <br>
                
                        <input name="username" type="text" />
                    </div>
            
                    <div class="form-pair">
                        <label for="password">
                            Password
                        </label>
            
                        <br>
            
                        <input name="password" type="password" autocomplete="current-password"/>
                    </div>
            
                    <button class="blue-button">
                        Login
                    </button>
                </form>

            </div>

        </div>
    </body>
</html>