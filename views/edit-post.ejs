<!DOCTYPE html>
<html lang="en">
    <%- include('./pieces/head') %>
    <body>
        <%- include('./pieces/nav', {token: token})%>

        <div class="container">
            <h1>
                Edit post
            </h1>

            <form action="/posts/<%= post._id %>" method="POST">
                <div class="form-pair">
                    <label for="title">
                        Title
                    </label>
            
                    <br>
            
                    <input name="title" type="text" class="form-wide" required value="<%= post.title %>" />
                </div>
        
                <div class="form-pair">
                    <label for="description">
                        Description
                    </label>
        
                    <br>
        
                    <!-- <input name="body" type="text" /> -->
                    <textarea name="description" class="form-wide" rows="4" required><%= post.description %></textarea>
                </div>

                <div class="form-pair">
                    <label for="body">
                        Body
                    </label>
        
                    <br>
        
                    <!-- <input name="body" type="text" /> -->
                    <textarea name="body" class="form-wide" rows="10" required><%= post.body %> </textarea>
                </div>

                <div class="form-pair">
                    <label for="image">
                        Image URL
                    </label>
            
                    <br>
            
                    <input name="image" type="text" class="form-wide" required value="<%= post.image %>" />
                </div>

                <input type="hidden" name="author" value="<%= post.author %>">
                <input type="hidden" name="timestamp" value="<%= post.timestamp %>">
        
                <button class="blue-button">
                    Save changes
                </button>
            </form>
            <form class="delete-post" action="/posts/<%= post._id %>/delete" method="POST">
                <input type="hidden" name="post" value="<%= post %>">

                <button>
                    Delete post
                </button>
            </form>
        </div>
    </body>
</html>